{% extends 'base.html.twig' %}

{% block title %}Paiement!{% endblock %}

{% block body %}
<style>
.container_pay{
    width: 750px;
    height: 500px;
    background-color: white;
    display: flex;
    flex-direction: column;
    padding: 40px;
    justify-content:space-around;
    margin-top: 20px;
}

.container_pay h1{
    text-align: center;
    margin-bottom: 30px;
    font-weight:600;
    background-color:rgb(190, 190, 190);
    padding: 5px;
    border-radius:2px;
    color: white;
}

.first-row{
     display: flex;
}

.owner{
    width: 100%;
    margin-right: 40px;
}

.input-field{
    border: 1px solid #999;
    margin-bottom: 20px;
}

.input-field input{
    width: 100%;
    border:none;
    outline: none;
    padding: 10px;
}

.selection{
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.selection select{
    padding: 10px 20px;
}

.container_pay button{
    background-color: #EF5E4E;
    color: white;
    text-align: center;
    text-transform: uppercase;
    text-decoration: none;
    padding: 10px;
    font-size: 18px;
    transition: 0.5s;
    font-weight:500;
    margin-top:20px;
    border-radius:2px;
    width:100%;
}

.container_pay button:hover{
    background-color: #EF5E4E;
}

.cards img{
    width: 100px;
}
</style>
<div style="width:100%; display:flex; justify-content:center; margin-top:50px;">
<div class="container_pay">
        <h1>Confirmer votre paiement</h1>
        <h2 style="margin-bottom:20px; font-weight:600;">Prix total : 600000 DH</h2>
        {{ include('client/_paiementForm.html.twig') }}
<div>
</div>
{% endblock %}
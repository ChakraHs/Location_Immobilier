<div id="carouselExample_{{ a_annonce.id }}" class="carousel slide">
    <div class="carousel-inner">
        {% set i=0 %}
        {% for image in images %}
            {% if i == 0 %}
                <div class="carousel-item active">
                    <img class="d-block w-100 Annonce-item-image" src={{ asset('uploads/Annonce_Image/'~image) }} alt={{ 'uploads/Annonce_Image/'~image }}>
                </div>
            {% else %}
                <div class="carousel-item">
                    <img class="d-block w-100 Annonce-item-image" src={{ asset('uploads/Annonce_Image/'~image) }} alt={{ image }}>
                </div>
            {% endif %}
            {% set i=i+1 %}
        {% endfor %}
    </div>
    {% if i !=1 %}
        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExample_{{ a_annonce.id }}" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselExample_{{ a_annonce.id }}" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    {% endif %}
</div>